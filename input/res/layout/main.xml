    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Navigation: "
    android:id="@+id/label2"
    />
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Touch: "
    android:id="@+id/label3"
    />
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Sensor: "
    android:id="@+id/label4"
    />
<ImageView android:id="@+id/ImageView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:fitsSystemWindows="true" android:focusableInTouchMode="true" android:focusable="true" android:src="@drawable/board"></ImageView>
